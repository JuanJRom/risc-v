#include "semaphore.h"

void SemaphoreInit(semaphore_t *semaphore, int32_t value){
	*semaphore->value = value;
}

void SemaphoreWait(semaphore_t *semaphore){
	intr_off();
	*semaphore->value -=1;
	while(*semaphore <=0){

	}
	intr_on();
}

void SemaphoreSignal(semaphore_t *semaphore){
	intr_off();
	*semaphore->value +=1;
	intr_on();
}


