#include "semaphore.h"

void SemaphoreInit(int32_t *semaphore, int32_t value){
	*semaphore = value;
}

void SemaphoreWait(int32_t *semaphore){
	intr_off();
	*semaphore -=1;
	while(*semaphore <=0){

	}
	intr_on();
}

void SemaphoreSignal(int32_t *semaphore){
	intr_off();
	*semaphore +=1;
	intr_on();
}


