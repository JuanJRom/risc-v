/* Diseño de kernel sobre arquitectura risc-v*/

#include "kernel.h"
#include <stdio.h>

int count = 0, count1= 0;

void task(void){
	while(1){
		count++;
		printf("task_counter: %d\n", count);
		asm volatile("wfi");
	}
}

void task1(void){
	while(1){
		count1++;
		printf("task_1_counter: %d\n", count1);
		asm volatile("wfi");
	}
}

int main() {
	printf("RISC-V Kernel\n");
	osKernelAddThreads(&task, &task1);
	osKernelLaunch();
}

